@page "/daily-raport"
@model LifeFuel.Pages.DailyRaportModel
@{
}


<div class="row justify-content-around">
    <div class="col-4 d-flex">
        <input class="form-control" type="date" />
    </div>
</div>

<hr />

<div class="row justify-content-center text-center">
    <div class="col-12">
        <h5>How do you feel?</h5>
    </div>
    <div class="d-flex justify-content-center">
        <i class="bi bi-emoji-angry emoji"></i>
        <i class="bi bi-emoji-frown emoji"></i>
        <i class="bi bi-emoji-neutral emoji"></i>
        <i class="bi bi-emoji-smile emoji"></i>
        <i class="bi bi-emoji-laughing emoji"></i>
    </div>
</div>

<div class="row justify-content-center text-center">
    <div class="col-12">
        <h5>How do have any symptoms?</h5>
    </div>

    <div class="d-flex justify-content-center">
        <i class="rounded-pill symptom">Headache</i>
        <i class="rounded-pill symptom">Stomach pain</i>
        <i class="rounded-pill symptom">Cough</i>
        <i class="rounded-pill symptom">Sore throat</i>
        <i class="rounded-pill symptom">Rhinitis</i>
        <i class="rounded-pill symptom">Rash</i>
        <i class="rounded-pill symptom">Joint or muscle pain</i>
        <i class="rounded-pill symptom">Vomiting</i>
    </div>
</div>

<div class="row justify-content-center text-center">
    <div class="col-12">
        <h5>Energy</h5>
    </div>

    <div class="d-flex justify-content-center w-50">
        <input class="form-range" type="range" min="1" max="10" value="0" step="1" />
    </div>
</div>

<script>
    let emojis = Array.from(document.getElementsByClassName("emoji"));

    for (let i = 0; i < emojis.length; i++) {
        emojis[i].addEventListener('click', () => {
            if (!emojis[i].classList.contains("checked")) {
                emojis.forEach((el) => el.classList.remove("checked"));
            }
            emojis[i].classList.toggle("checked");
        });
    }


    let symptoms = Array.from(document.getElementsByClassName("symptom"));
    for (let i = 0; i < symptoms.length; i++) {
        symptoms[i].addEventListener('click', () => {
            symptoms[i].classList.toggle("checked");
        });
    }

</script>